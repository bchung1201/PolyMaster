# PolyAgent Web Environment Variables

# === REQUIRED FOR BASIC FUNCTIONALITY ===
# OpenAI API Key (required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Dry run mode (set to false for live trading)
DRY_RUN=true

# === OPTIONAL FOR FULL FUNCTIONALITY ===
# Polymarket/Trading API Keys
POLYGON_WALLET_PRIVATE_KEY=your_polygon_wallet_private_key
CLOB_API_KEY=your_clob_api_key
CLOB_SECRET=your_clob_secret
CLOB_PASS_PHRASE=your_clob_passphrase

# News API Keys
NEWSAPI_API_KEY=your_news_api_key
TAVILY_API_KEY=your_tavily_api_key

# Market Configuration
MARKET_CATEGORY=politics
MIN_MARKET_VOLUME=10000.0

# Database
CHROMA_DB_PATH=./chroma_db

# WebSocket
WS_UPDATE_INTERVAL=5